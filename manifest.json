{
  "manifest_version": 3,
  "name": "NYT Connections Color Fixer",
  "description": "Makes the colors on the NYTimes Connection puzzle more intuitive.",
  "version": "1.0.1",
  "content_scripts": [
    {
      "matches": ["https://www.nytimes.com/games/connections"],
      "css": ["colors.css"]
    }
  ],
  "icons": {
    "64": "logos/logo-64.png",
    "128": "logos/logo-128.png",
    "256": "logos/logo.png"
  }
}
